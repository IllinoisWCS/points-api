{
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "allowJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  }
}
